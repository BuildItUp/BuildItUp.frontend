<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    tools:context="com.example.rizalfauzy.builditup.BuildPage">

    <!--sebagai acuan / parent dari text view lainnya -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height = "wrap_content"
        android:text = ""
        android:id = "@+id/textview"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <!--title build-->
    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Build"
        android:id = "@+id/textView"
        android:layout_below = "@+id/textview"
        android:textColor = "#2d2d2d"
        android:textSize = "35dp"
        android:layout_alignParentTop = "true"
        android:layout_centerHorizontal = "true" />

    <!--penampil gambar logo Build It up-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/buildituplogo1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx1"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input what to build-->
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/txBuildto"
            android:textColorHint="#2d2d2d"
            android:hint="what to Build" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx2"
        android:layout_below="@+id/tx1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input description-->
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:id="@+id/txDescript"
            android:textColorHint="#2d2d2d"
            android:hint="description" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx3"
        android:layout_below="@+id/tx2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input location-->
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txLocation"
            android:textColorHint="#2d2d2d"
            android:hint="City" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx7"
        android:layout_below="@+id/tx2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input location-->
        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textLongMessage"
            android:id="@+id/txAddress"
            android:textColorHint="#2d2d2d"
            android:hint="location" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx4"
        android:layout_below="@+id/tx7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input Budget-->
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/txBudget"
            android:textColorHint="#2d2d2d"
            android:hint="estimated budget" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx5"
        android:layout_below="@+id/tx4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input period start-->
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/txStart"
            android:textColorHint="#2d2d2d"
            android:hint="start" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tx6"
        android:layout_below="@+id/tx5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--input period start-->
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:id="@+id/txEnd"
            android:textColorHint="#2d2d2d"
            android:hint="end" />

    </android.support.design.widget.TextInputLayout>


</RelativeLayout>
